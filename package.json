{
    "name": "vsfire",
    "displayName": "Firebase",
    "description": "Firestore Rules syntax highlight",
    "version": "1.0.0",
    "publisher": "toba",
    "keywords": ["firebase","firestore","rules"],
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/toba/firestore-rules.git"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [
            {
               "id": "firerules",
               "extensions": [".rules", ".rule"],
               "aliases": ["Firebase Rules"],
               "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
               "language": "firerules",
               "scopeName": "source.firerules",
               "path": "./syntaxes/firerules.json"
            }
        ]
    },
    "devDependencies": {
        "vsce": "^1.31.1"
    }
}