{
   "version": "2.0.0",
   "tasks": [
      {
         "taskName": "Publish",
         "command": "./node_modules/.bin/vsce",
         "args": [
            "publish"
         ],
         "group": "none",
         "problemMatcher": []
      },
      {
         "taskName": "Package",
         "command": "./node_modules/.bin/vsce",
         "args": [
            "package"
         ],
         "group": "none",
         "problemMatcher": []
      },
      {
         "taskName": "Test",
         "options": {
            "env": {
               "NODE_PATH": "${cwd}/src",
               "TS_NODE_PROJECT": "${cwd}"
            }
         },
         "command": "node_modules/.bin/mocha --require ts-node/register ./**/*.test.ts",
         "type": "shell",
         "group": "test",
         "problemMatcher": [
            "$tsc"
         ]
      },
      {
         "taskName": "npm",
         "command": "npm",
         "type": "shell",
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
         },
         "args": [
            "run",
            "watch",
            "--loglevel",
            "silent"
         ],
         "isBackground": true,
         "problemMatcher": "$tsc-watch"
      },
      {
         "taskName": "Build",
         "group": "build",
         "command": "./node_modules/.bin/tsc -p tsconfig.json",
         "type": "shell",
         "problemMatcher": "$tsc"
      },
      {
         "taskName": "Install VSCode Typings",
         "group": "none",
         "type": "shell",
         "command": "node ./node_modules/vscode/bin/install",
         "problemMatcher": []
      },
      {
         "type": "npm",
         "script": "pkgvars",
         "problemMatcher": []
      }
   ]
}