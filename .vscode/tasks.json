{
   "version": "2.0.0",
   "tasks": [
      {
         "taskName": "Publish",
         "command": "./node_modules/.bin/vsce",
         "args": [
            "publish"
         ],
         "group": "none",
         "problemMatcher": []
      },
      {
         "taskName": "Package",
         "command": "./node_modules/.bin/vsce",
         "args": [
            "package"
         ],
         "group": "none",
         "problemMatcher": []
      },
      {
         "taskName": "npm",
         "command": "npm",
         "type": "shell",
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
         },
         "args": ["run", "watch", "--loglevel", "silent"],
         "isBackground": true,
         "problemMatcher": "$tsc-watch"
      }
   ]
}